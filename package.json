{
  "name": "wavr",
  "description": "Web audio visualizer",
  "scripts": {
    "start": "budo js/main.js -ol -- -t babelify | garnish",
    "html": "jade -o public index.jade",
    "build:js": "browserify js/main.js -t babelify -p licensify | uglifyjs -m -c warnings=false --comments '/This header is generated by licensify/' -o public/main.min.js",
    "rm": "rm -rf public/**",
    "cp": "cp -r sounds public/sounds",
    "build": "npm run rm && npm run html && npm run build:js && npm run cp",
    "ghpages": "gh-pages -d public",
    "deploy": "npm run build && npm run ghpages"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sugarshin/wavr"
  },
  "author": "sugarshin",
  "license": "MIT",
  "devDependencies": {
    "babelify": "^6.3.0",
    "browserify": "^11.2.0",
    "budo": "^5.1.0",
    "garnish": "^3.2.1",
    "gh-pages": "^0.4.0",
    "jade": "^1.11.0",
    "licensify": "^2.0.1",
    "uglify-js": "^2.4.24"
  },
  "dependencies": {
    "insert-stylesheet": "^0.1.0",
    "raf-loop": "^1.1.3",
    "whatwg-fetch": "^0.9.0"
  }
}
